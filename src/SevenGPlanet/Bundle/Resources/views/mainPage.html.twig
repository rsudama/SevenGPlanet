{% extends "SevenGPlanetBundle::baseLayout.html.twig" %}

{% block head %}
    {# inherit styles and javascript from parent #}
    {{ parent() }}

    <!-- from user base layout -->
    <!--suppress ALL -->
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/smoothness/jquery-ui.css"/>
    <link rel='stylesheet' id='mapinsight-fonts-css'  href='//fonts.googleapis.com/css?family=Source+Sans+Pro%3A300%2C400%2C700%2C300italic%2C400italic%2C700italic%7CBitter%3A400%2C700&#038;subset=latin%2Clatin-ext' type='text/css' media='all' />

    <link rel="stylesheet" href="{{ asset('bundles/sevengplanet/css/baseStyle.css') }}"/>

    {% block javascripts %}
        {# JQuery #}
        <script src='http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js'></script>
        <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>
        {# include FOS Javascript Bundle to provide Jquery/Ajax support in Symfony #}
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
        {# general ajax setup functions #}
        <script type="text/javascript" src="{{ asset('/bundles/sevengplanet/js/ajax.js') }}"></script>
    {% endblock javascripts %}
{% endblock head %}

