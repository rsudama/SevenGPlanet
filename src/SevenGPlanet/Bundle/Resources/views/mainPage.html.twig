                    </li>
                    {#<li id="welcome">Welcome <em>{{ app.user.username }}</em>!</li>#}
                </ul>
            </div>

            {% block nav_buttons %}
            {% endblock nav_buttons %}
        </nav>
    </div><!-- #navbar -->

    {% block content_header %} {% endblock content_header %}

    {% block content %} {% endblock content %}

    <footer id="colophon" class="site-footer">
        <div class="site-info">
            <!--add EI logo floating right
             <img src="http://dev.mapinsight.co.uk/wp-content/themes/mapping/images/mi-logo-250.png" class="footer-image-left">-->
